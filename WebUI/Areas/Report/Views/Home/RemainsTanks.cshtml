@{
    ViewBag.Title = "Экипировка ст.'Карьерная ГД'. Остатки ДТ";
    ViewBag.section = "Остатки ДТ";
}

@section styles {
    @Styles.Render("~/jquery-ui/css")
    @Styles.Render("~/DataTables/css")
    @Styles.Render("~/DateTime/css")
    <link rel="stylesheet" type="text/css" href="~/Content/report/report.css">
}

@section scripts {

    <script>
        $('body').addClass('img-header-global');
        $('#page-width').addClass('average');
    </script>

    <script>
        var mode_run = '@System.Configuration.ConfigurationManager.AppSettings["ModeRun"]';
        var logs = '@System.Configuration.ConfigurationManager.AppSettings["Logs"]';
    </script>

    @Scripts.Render("~/bundles/Ajax")
    @Scripts.Render("~/bundles/Moment")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/DataTables")
    @Scripts.Render("~/bundles/DateTime")

    <script src="~/Scripts/shared/common.js" type="text/javascript"></script>
    <script src="~/Scripts/shared/tsk_api.js" type="text/javascript"></script>
    <script src="~/Scripts/report/report_remains_tanks.js" type="text/javascript"></script>
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-12 col-sm-3">
                <div>
                    <label class="control-label">Выберите дату :</label>
                    <div>
                        <button type="button" class="btn btn-primary btn-xs" id="bt-left"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span></button>
                        <span id="select-date">
                            <input class="control-label" id="date" name="date" size="20">
                        </span>
                        <button type="button" class="btn btn-primary btn-xs" id="bt-right"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></button>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-3">
                <label class="control-label">Выберите смену :</label>
                <select class="form-control" id="select-smena" name="select-smena"></select>
            </div>
            <div class="col-xs-12 col-sm-6">
                <label class="control-label">Выберите период :</label>
                <div>
                    <span id="select-range-date">
                        <input class="control-label" id="date-start" name="date-start" size="20">
                        <input class="control-label" id="date-stop" name="date-stop" size="20">
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12">
                <fieldset>
                    <legend>Остатки на текущий момент</legend>
                    <table class='display compact' id="table-report-current" style="width:100%" cellpadding="0"></table>
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <fieldset>
                    <legend>Остатки на начало часа</legend>
                    <table class='display compact' id="table-report" style="width:100%" cellpadding="0"></table>
                </fieldset>
            </div>
        </div>

    </div>
</div>
